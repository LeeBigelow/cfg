# assignments
# vim: set ts=2 sw=2 sts=2 syntax=swayconfig:

# Window assignments 
for_window [app_id="vlc"] floating enable
for_window [class="vlc"] floating enable
for_window [app_id="dialog-password"] floating enable
for_window [app_id="todo"] floating enable
for_window [app_id="calibre-ebook-edit"] floating enable
for_window [app_id=".*\.float"] floating enable
for_window [app_id=".*\.pavucontrol"] floating enable
for_window [app_id="zenity"] floating enable
for_window [app_id="qalculate-gtk"] floating enable
for_window [app_id="pqiv"] floating enable
for_window [title="Picture-in-Picture"]  floating enable

for_window [shell="xwayland"] {
	title_format "(X)%title"
	border normal 
}

for_window [app_id="impala"] {
	floating enable
	resize set width 33 ppt height 66 ppt
	move position 67 ppt 0 ppt
} 

for_window [app_id="bluetui"] {
	floating enable
	resize set width 33 ppt height 66 ppt
	move position 67 ppt 0 ppt
}

for_window [app_id="mpv"] {
	floating enable
	sticky enable
}




# Workspace assignments
workspace {
	1 output "eDP-1"
	2 output "eDP-1"
	3 output "eDP-1"
	4 output "eDP-1"
	5 output "eDP-1"
	6 output "eDP-1"
	7 output "eDP-1"
	8 output "eDP-1"
	9 output "eDP-1"
	10 output "HDMI-A-1"
}
